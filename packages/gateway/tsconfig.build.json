{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "paths": {
      "@personal-context-router/shared": [
        "../shared/dist",
        "../../node_modules/@personal-context-router/shared"
      ],
      "@personal-context-router/shared/*": [
        "../shared/dist/*",
        "../../node_modules/@personal-context-router/shared/*"
      ]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules", "**/*.test.ts", "**/*.spec.ts"]
}
